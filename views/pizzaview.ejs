<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
        <!-- Styles -->
        <link rel="stylesheet" href="./styles.css"/>

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Arapey:ital@0;1&family=Pinyon+Script&display=swap" rel="stylesheet">
</head>
<body>
    <div class="Navbar arapey-regular">
        <div class="navTitle">
            <a href="./home" class="logo">
                <img src="./Assets/Logo top.png" class="logoNav" alt="PizzaTria Logo"/>         
            </a> 
            <h1 class="PizzaTriaName">PizzaTria</h1>
        </div>
        <div class="navLinks">
            <a href="./home" class="navOption">
                <h2 class="navH">Home</h2>            
            </a>       
            <a href="./menu" class="navOption">
                <h2 class="navH">Menu</h2>            
            </a> 
            <a href="./profile" class="navOption">
                <h2 class="navH">Profile</h2>
            </a>                
            <a href="./checkout" class="navOption">
                <svg class="navH" xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-cart-fill" viewBox="0 0 16 16">
                    <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2"/>
                </svg>  
                <%if(cartItems>0){%>
                    <div class="cartItems"><span><%=cartItems%></span></div>
                <%}%>         
            </a>   
        </div>
    </div>

    <div style="background: image-set('./Assets/<%=pizza.name%>.jpeg'); background-size: cover;">
        <a class="backToMenu" href="./menu">
            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5"/>
            </svg>            
        </a>
        <div class="pizzaViewInfo">
            <div class="PizzaNameAndPrice">
                <h1 style="padding-right: 20px; margin: 0%;"><%=pizza.name%></h1>
                <h2 style="padding-right: 20px; margin: 0%; color: #E88D38;;">R<%=pizza.price%></h2>                
            </div>
            <p class="pizzaViewDescription">
                <%=pizza.description%>
            </p>
            <form action="/order" method="POST">

                <h2>Please select a base</h2>
                <label class="container">Thick
                    <input required="true" type="radio" id="basetype" name="BaseType" value="Thick">
                    <span class="checkmark"></span>
                </label>
                <label class="container">Thin
                    <input required="true" type="radio" id="basetype" name="BaseType" value="Thin">
                    <span class="checkmark"></span>
                </label>

                <input name="PizzaId" hidden="true" value="<%=pizza.id%>"/>
                <h2>Additional Toppings</h2>
                <%if(toppings){%>
                    <%toppings.forEach(topping => {%>
                        <label class="additionalTopping container"><%=topping.topping_name%>
                            <input type="checkbox" id="<%=topping.id%>" name="<%=topping.id_name%>" value="<%=topping.topping_price%>">
                            <span class="checkmark"></span>
                        </label>
                    <%})%>    
                <%}%>
            
                <input class="orderButton" type="submit" value="Order Now"/> 
            </form>
        </div>
    </div>




    <script src="index.js" charset="UTF-8"></script>
</body>
</html>